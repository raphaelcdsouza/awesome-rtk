{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "rootDirs": [
      "src"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "sourceMap": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "tests"]
}
